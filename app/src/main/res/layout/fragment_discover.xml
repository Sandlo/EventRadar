<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/full_padding"
        android:layout_marginHorizontal="@dimen/full_padding"
        app:defaultMarginsEnabled="false"
        app:menu="@menu/search_bar_menu"
        android:hint="@string/search_hint_discover" />

    <Button
        android:id="@+id/dummy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_event"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/second_dummy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_login"
        android:layout_below="@id/dummy_button"
        android:layout_centerInParent="true" />
</RelativeLayout>